<div class="col-sm-6 col-sm-offset-3">
    <h1 class="page_header">Add Item to Inventory</h1>
    <form method="post" action="/addinventory">
        <div class="form-group">
            <label>Furniture Bank Location:</label>
            <select class="form-control" placeholder="Furniture Bank" name="bankName">
                {{#each data}}
                    <option value="{{name}}">{{name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label>Type of furniture:</label>
            <select class="form-control" placeholder="Item" name="itemType">
                <option value="Table">Table</table></option>
                <option value="Dining Chair set">Dining Chair Set</option>
                <option value="Recliner">Recliner</option>
                <option value="Loveseat">Loveseat</option>
                <option value="Sofa">Sofa</option>
                <option value="Dresser">Dresser</option>
                <option value="TV Stand">TV Stand</option>
                <option value="Vanity">Vanity</option>
                <option value="Desk">Desk</option>
                <option value="Other">Other</option>
            </select>
        </div>
        <div class="form-group">
            <label>Item Description:</label>
            <input type="description" class="form-control" placeholder="Description" name="description">
        </div>
        <div class="form-group">
            <label>Wear:</label>
            <p>(1 is very worn, 10 is like new)</p>
            <select class="form-control" placeholder="Item" name="itemType">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
            </select>
        </div>
        <div class="form-group">
            <label>Name of Donor (if known):</label>
            <input type="donor" class="form-control" placeholder="First, Last Name of Donor" name="donor">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-sucess">Submit</button>
        </div>
</div>
