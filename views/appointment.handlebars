<div class="col-sm-6 col-sm-offset-3">
    <h1 class="page_header">Make Appointment</h1>
    <form method="post" action="/appointment">
        <div class="form-group row">
            <label class="col-xs-12">Item</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" placeholder="Item" name="item" value="{{data.name}}">
            </div>
            <div class="col-sm-3">
                <a href="/browse" class="btn btn-block btn-primary">Find Item</a>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-xs-12">Furniture Bank</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" placeholder="Furniture Bank" name="bank" value="{{data.bank}}">
            </div>
            <div class="col-sm-3">
                <a href="#" class="btn btn-block btn-primary">Find Bank</a>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6">
                <label>Date</label>
                <input type="date" class="form-control" name="date">
            </div>
            <div class="col-sm-6">
                <label>Time</label>
                <input type="time" class="form-control" name="time">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-xs-12">
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </div>
    </form>
</div>
